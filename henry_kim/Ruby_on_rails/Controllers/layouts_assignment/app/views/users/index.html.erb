<% content_for :left_column do %>
<div class="container">
  <h1>All Users</h1>
  <table class="table">
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Favorite Language</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.first_name%></td>
        <td><%=user.last_name%></td>
        <td><%=user.favorite_language%></td>
      </tr>
    <%end%>
  </table>
</div>
<% end%>



<% content_for :right_column do %>
<h1>Create New User</h1>
<form class="form-group" action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="">First Name:</label>
  <input type="text" name="user[first_name]" value="" class="form-control">
  <label for="">Last Name:</label>
  <input type="text" name="user[last_name]" value="" class="form-control">
  <label for="">Favorite Language:</label>
  <input type="text" name="user[favorite_language]" value="" class="form-control">
  <button type="submit" name="button" class="btn btn-primary">Submit</button>
</form>
<button type="button" name="button" class="btn btn-dark"><a href="/posts">All Posts</a></button>
<% end %>
